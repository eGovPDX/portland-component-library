{
  "name": "@cityofportland/component-library",
  "version": "0.1.0",
  "description": "Portland Component Library using design tokens from Figma",
  "keywords": [
    "react",
    "components",
    "portland",
    "design-system"
  ],
  "author": "Ken Downey",
  "license": "ISC",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/portland-component-library.umd.js",
  "module": "./dist/portland-component-library.es.js",
  "exports": {
    ".": {
      "import": "./dist/portland-component-library.es.js",
      "require": "./dist/portland-component-library.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "pnpm run build:lib",
    "build:lib": "vite build --config vite.lib.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "prepare": "npm run build:lib"
  },
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
