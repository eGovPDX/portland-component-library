    "babel-jest": "^29.7.0",
    "eslint": "^9.22.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^0.11.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.51.0",
    "sass": "^1.85.1",
    "storybook": "^8.6.12",
    "vite": "^6.2.1",
    "vitest": "^3.0.8"
